{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022", "DOM"],
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"alwaysStrict": true,
		// Don't output .d.ts or source maps
		"declaration": false,
		"sourceMap": false,
		// remove unused imports
		"importsNotUsedAsValues": "remove",
		"esModuleInterop": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		// This will be handled by the minifier
		"removeComments": false,
		"resolveJsonModule": false,
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
