{
	"name": "autocanvas",
	"version": "1.0.0",
	"private": true,
	"description": "",
	"license": "MIT",
	"author": "",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "rimraf ./dist",
		"compile": "yarpm run clean && yarpm run test && yarpm run compile:webpack",
		"compile:webpack": "webpack",
		"lint": "yarpm run lint:sort && yarpm run lint:sort && yarpm run lint:eslint",
		"lint:eslint": "eslint . --fix --ext .js,.ts,.mjs,.mts,.cjs,.cts,.tsx,.jsx",
		"lint:prettier": "prettier -w .",
		"lint:sort": "sort-package-json",
		"package": "yarpm run clean && yarpm run package:webpack",
		"package:webpack": "webpack --mode production",
		"release": "release-it",
		"test": "yarpm run test:typecheck && yarpm run lint && yarpm run test:jest",
		"test:jest": "jest",
		"test:typecheck": "yarpm run test:typecheck:root && tsc --noEmit -p tsconfig.json",
		"test:typecheck:root": "tsc -p ./tsconfig.root.json",
		"watch": "yarpm run clean && yarpm run watch:webpack",
		"watch:webpack": "webpack --watch"
	},
	"devDependencies": {
		"@types/jest": "^29.5.3",
		"@types/node": "^20.4.9",
		"@typescript-eslint/eslint-plugin": "^6.3.0",
		"@typescript-eslint/parser": "^6.3.0",
		"bookmarklet": "^3.0.0",
		"eslint": "^8.47.0",
		"eslint-plugin-jest": "^27.2.3",
		"html-inline-script-webpack-plugin": "^3.2.1",
		"html-loader": "^4.2.0",
		"html-webpack-plugin": "^5.5.3",
		"jest": "^29.6.2",
		"jest-environment-jsdom": "^29.6.2",
		"prettier": "^3.0.1",
		"release-it": "^16.1.4",
		"rimraf": "^5.0.1",
		"sort-package-json": "^2.5.1",
		"terser-webpack-plugin": "^5.3.9",
		"ts-jest": "^29.1.1",
		"ts-loader": "^9.4.4",
		"typescript": "^5.1.6",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4",
		"yarpm": "^1.2.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"contributers": [
		"Aaron Dill"
	]
}
